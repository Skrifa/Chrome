{
	"manifest_version": 2,
	"name": "Skrifa Chrome",
	"version": "0.1.15",
	"version_name": "0.1.15",
	"offline_enabled": true,
	"icons": {
		"16": "img/icon_16.png",
		"32": "img/icon_32.png",
		"48": "img/icon_48.png",
		"128": "img/icon_128.png",
		"256": "img/icon_256.png",
		"512": "img/icon_512.png"
	},
	"permissions": ["storage", "unlimitedStorage", {"fileSystem": ["write"]}, "<all_urls>", "webview",  "fullscreen"],
	"app": {
		"background": {
			"scripts": ["js/background.js"]
		}
	},
	"minimum_chrome_version": "28",
	"file_handlers": {
		"any": {
			"extensions": [
				"skrifa",
				"skrup"
			]
		}
	}
}
